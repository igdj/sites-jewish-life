                    <h3>
                        {{ site.titleLocalized(app.request.locale) }}
                    </h3>
                    <div>
                        <p>
                           {{ site.streetLocalized(app.request.locale) }}
                        </p>
                        <p>
                            {{ site.descriptionLocalized(app.request.locale)|nl2br }}
                            {% set urls = site.getUrlSeparated() %}
                            {% if site.url is not empty %}
                                <br />
                                {% for url in urls %} <span class="fas fa-external-link-alt color-gray-medium" aria-hidden="true" style="padding-right: 2px"></span> <a href="{{ url }}" target="_blank">{{ url|prettifyurl }}</a>{% endfor %}
                            {% endif %}
                        </p>
                        {% if app.request.locale == 'de' and site.getJuedischesHamburg() is not empty  %}
                            {% for url in site.getJuedischesHamburg() %} <span class="fas fa-external-link-alt color-gray-medium" aria-hidden="true" style="padding-right: 2px"></span> <a href="{% if url starts with 'http' %}{{ url }}{% else %}https://dasjuedischehamburg.de/inhalt/{{ url }}{% endif %}" target="_blank">Weitere Informationen im Nachschlagewerk „Das J&uuml;dische Hamburg“</a>{% endfor %}
                        {% endif %}
                    </div>
